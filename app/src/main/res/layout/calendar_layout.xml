<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/yearMonthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@{viewModel.yearMonth}"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"/>

    <GridLayout
        android:id="@+id/calendarGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:rowCount="6"
        android:layout_gravity="center_horizontal">

        <!-- Add TextView elements for each day of the month -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="@{String.valueOf(day.day)}"
            android:textColor="@{day.isHoliday ? @android:color/holo_red_dark : @android:color/black}"
            android:background="@{viewModel.selectedDay == day ? @android:color/holo_orange_light : @android:color/transparent}"
            android:onClick="@{() -> viewModel.selectDay(day)}" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="@{String.valueOf(day.day)}"
            android:textColor="@{day.isHoliday ? @android:color/holo_red_dark : @android:color/black}"
            android:background="@{viewModel.selectedDay == day ? @android:color/holo_orange_light : @android:color/transparent}"
            android:onClick="@{() -> viewModel.selectDay(day)}" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="@{String.valueOf(day.day)}"
            android:textColor="@{day.isHoliday ? @android:color/holo_red_dark : @android:color/black}"
            android:background="@{viewModel.selectedDay == day ? @android:color/holo_orange_light : @android:color/transparent}"
            android:onClick="@{() -> viewModel.selectDay(day)}" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="@{String.valueOf(day.day)}"
            android:textColor="@{day.isHoliday ? @android:color/holo_red_dark : @android:color/black}"
            android:background="@{viewModel.selectedDay == day ? @android:color/holo_orange_light : @android:color/transparent}"
            android:onClick="@{() -> viewModel.selectDay(day)}" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="@{String.valueOf(day.day)}"
            android:textColor="@{day.isHoliday ? @android:color/holo_red_dark : @android:color/black}"
            android:background="@{viewModel.selectedDay == day ? @android:color/holo_orange_light : @android:color/transparent}"
            android:onClick="@{() -> viewModel.selectDay(day)}" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="@{String.valueOf(day.day)}"
            android:textColor="@{day.isHoliday ? @android:color/holo_red_dark : @android:color/black}"
            android:background="@{viewModel.selectedDay == day ? @android:color/holo_orange_light : @android:color/transparent}"
            android:onClick="@{() -> viewModel.selectDay(day)}" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="@{String.valueOf(day.day)}"
            android:textColor="@{day.isHoliday ? @android:color/holo_red_dark : @android:color/black}"
            android:background="@{viewModel.selectedDay == day ? @android:color/holo_orange_light : @android:color/transparent}"
            android:onClick="@{() -> viewModel.selectDay(day)}" />

        <!-- Add more TextView elements for the remaining days of the month -->

    </GridLayout>

</LinearLayout>
